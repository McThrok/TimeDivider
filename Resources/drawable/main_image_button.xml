<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:a="http://schemas.android.com/apk/res/android">

  <item a:state_pressed="false">
    <layer-list>
      <item >
        <shape>
          <solid a:color="@color/mainBlueGrayLight"/>
          <padding a:bottom="5dp"  a:top="5dp"  a:left="5dp"  a:right="5dp" />
        </shape>
      </item>
    </layer-list>
  </item>

  <item a:state_pressed="true">
    <layer-list>
      <item >
        <shape>
          <solid a:color="@color/mainTealDark"/>
          <padding a:bottom="5dp"  a:top="5dp"  a:left="5dp"  a:right="5dp" />
        </shape>
      </item>
    </layer-list>
  </item>

</selector>
