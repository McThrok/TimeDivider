<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
      android:paddingLeft ="10dp"
      android:paddingRight ="10dp">


  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/PgsRowIndexTV"
    android:layout_alignParentLeft="true"/>

  <View
      android:id="@+id/PgsRowValueV"
      android:layout_width="6dip"
      android:layout_height="wrap_content"
      android:layout_margin="5dp"
      
      android:layout_alignTop="@+id/PgsRowMainRL"
      android:layout_alignBottom="@+id/PgsRowMainRL"
      android:layout_toRightOf="@+id/PgsRowIndexTV"/>

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/PgsRowNameTV"
      android:layout_toRightOf="@+id/PgsRowValueV"/>

  <LinearLayout
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/PgsRowMainRL"
    android:layout_alignParentRight="true"
    android:weightSum="2">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/PgsRowTimeTV"
        android:layout_gravity="right"
        android:layout_weight="1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/PgsRowPercentageTV"
        android:layout_gravity="right"
        android:layout_weight="1"/>
  </LinearLayout>
</RelativeLayout>
