<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

  <ImageButton
      android:layout_width="30dp"
      android:layout_height="30dp"
      android:layout_gravity="center"
      android:id="@+id/StkRowAddBtn"
      android:layout_marginRight="5dp"
      android:scaleType="fitXY"
      android:layout_alignParentLeft="true"
      android:layout_centerHorizontal="true"
      android:background="@drawable/custom_button" />

  <LinearLayout
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_toRightOf="@+id/StkRowAddBtn"
      android:layout_toLeftOf="@+id/StkRowEditBtn"
      android:weightSum="2">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/StkRowNameTV"
        android:layout_weight="1"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:weightSum="2">

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/StkRowValueTV"
          android:layout_weight="1" />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/StkRowTimeTV"
          android:layout_weight="1" />
    </LinearLayout>
  </LinearLayout>

  <ImageButton
      android:layout_width="30dp"
      android:layout_height="30dp"
      android:layout_gravity="center"
      android:id="@+id/StkRowEditBtn"
      android:layout_toLeftOf="@+id/StkRowDeleteBtn"
      android:scaleType="fitXY"
      android:layout_centerHorizontal="true"
      android:layout_marginRight="5dp"
      android:background="@drawable/custom_button" />

  <ImageButton
      android:layout_width="30dp"
      android:layout_height="30dp"
      android:layout_gravity="center"
      android:id="@+id/StkRowDeleteBtn"
      android:scaleType="fitXY"
      android:layout_alignParentRight="true"
      android:layout_centerHorizontal="true"
      android:background="@drawable/custom_button" />

</RelativeLayout>