<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:padding="20dp"
  android:layout_width="wrap_content"
  android:background="@color/mainBackground"
  android:layout_height="wrap_content">

  <CheckBox android:id="@+id/DialSBDateCB"
    android:text="filter by date"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>

  <LinearLayout
    android:orientation="horizontal"
    android:background="@android:color/transparent"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <Button
      android:text="start date"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/DialStartDateBtn"
      android:background="@drawable/custom_button"
      android:layout_margin="3dp"
      android:textColor="@color/mainTextColor" />

    <TextView
      android:text="start date"
      android:layout_gravity="center"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/DialStartDateTV"/>
  </LinearLayout>


  <LinearLayout
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">

    <Button
      android:text="end date"
      android:layout_margin="3dp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:id="@+id/DialEndDateBtn"
      android:background="@color/mainTealLight"
      android:padding="0dp"
      android:textColor="@color/mainTextColor" />

    <TextView
      android:text="end date"
      android:layout_gravity="center"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/DialEndDateTV" />
  </LinearLayout>


  <CheckBox android:id="@+id/DialSBValueCB"
    android:text="filter by value"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>

  <LinearLayout
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">

    <TextView
      android:text="minimum value"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>
    
    <TextView
      android:text="0"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/DialMinValueTV" />
  </LinearLayout>

    <SeekBar
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:max="10"
      android:id="@+id/DialMinValueSB"/>

   
  <LinearLayout
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:weightSum="1">
    
    <TextView
      android:text="maximum value"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_weight="1"/>
    
    <TextView
      android:text="0"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/DialMaxValueTV" />
  </LinearLayout>

    <SeekBar
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:max="10"
      android:id="@+id/DialMaxValueSB" />

    <Button
      android:text="done"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:background="@drawable/custom_button"
      android:textColor="@color/mainTextColor"
      android:layout_margin="3dp"
      android:id="@+id/DialDoneButton"/>

  </LinearLayout>

