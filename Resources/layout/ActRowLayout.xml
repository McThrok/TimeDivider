<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

  <ImageButton
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:id="@+id/ActRowRunBtn"
      android:layout_alignParentLeft="true"
      android:background="@drawable/custom_button"/>

  <LinearLayout
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_toRightOf="@+id/ActRowRunBtn"
      android:layout_toLeftOf="@+id/ActRowRemoveBtn"
      android:weightSum="3">

    <TextView
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:id="@+id/ActRowNameTV"
       android:layout_weight="1"/>

    <TextView
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:id="@+id/ActRowValueTV"
       android:layout_weight="1"/>


    <TextView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:id="@+id/ActRowStopwatchTV"
        android:layout_weight="1"/>
  </LinearLayout>

  <ImageButton
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:id="@+id/ActRowRemoveBtn"
      android:layout_alignParentRight="true"
      android:background="@drawable/custom_button"/>
</RelativeLayout>