<?xml version="1.0" encoding="utf-8" ?>

<LinearLayout
   xmlns:android="http://schemas.android.com/apk/res/android"
   android:orientation="vertical"
   android:layout_width="match_parent"
   android:layout_height="match_parent"
   android:weightSum="12">

  <OxyPlot.Xamarin.Android.PlotView
    android:id="@+id/plot_view"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="6"  />

  <ListView
    android:id="@+id/PgsFragLV"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="4"/>

  <LinearLayout
     android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
     android:weightSum="4">

    <Button
      android:id="@+id/PgsFragTodayBtn"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textSize="12sp"
      android:layout_weight="1"
      android:text="Today"/>

    <Button
      android:id="@+id/PgsFragYesterdayBtn"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textSize="12sp"
      android:layout_weight="1"
      android:text="Yesterday"/>

    <Button
      android:id="@+id/PgsFragThisWeekBtn"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textSize="12sp"
      android:layout_weight="1"
      android:text="This Week"/>

    <Button
      android:id="@+id/PgsFragLastWeekBtn"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textSize="12sp"
      android:layout_weight="1"
      android:text="Last Week"/>
  </LinearLayout>

  <Button
    android:id="@+id/PgsFragFilterBtn"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:text="Filter"/>



</LinearLayout>
