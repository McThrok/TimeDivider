<?xml version="1.0" encoding="utf-8" ?>

<LinearLayout
   xmlns:android="http://schemas.android.com/apk/res/android"
   android:orientation="vertical"
   android:layout_width="match_parent"
   android:layout_height="match_parent"
   android:background="@color/mainBackground"
   android:weightSum="12">
  
  <OxyPlot.Xamarin.Android.PlotView
    android:id="@+id/plot_view"
    android:background="@android:color/transparent"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="6"  />

  <ListView
    android:id="@+id/PgsFragLV"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="4"/>

  <LinearLayout
    android:orientation="horizontal"
    android:background="@android:color/transparent"
    android:textColor="@color/mainTextColor"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:weightSum="4">

    <Button
      android:id="@+id/PgsFragTodayBtn"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textSize="12sp"
      android:layout_weight="1"
      android:background="@drawable/main_button"
      android:textColor="@color/mainTextColor"
      android:layout_margin="3dp"
      android:text="Today"/>

    <Button
      android:id="@+id/PgsFragYesterdayBtn"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textSize="12sp"
      android:layout_weight="1"
      android:background="@drawable/main_button"
      android:textColor="@color/mainTextColor"
      android:layout_margin="3dp"
      android:text="Yesterday"/>

    <Button
      android:id="@+id/PgsFragThisWeekBtn"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textSize="12sp"
      android:layout_weight="1"
      android:background="@drawable/main_button"
      android:textColor="@color/mainTextColor"
      android:layout_margin="3dp"
      android:text="This Week"/>

    <Button
      android:id="@+id/PgsFragLastWeekBtn"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textSize="12sp"
      android:layout_weight="1"
      android:background="@drawable/main_button"
      android:textColor="@color/mainTextColor"
      android:layout_margin="3dp"
      android:text="Last Week"/>
  </LinearLayout>

  <Button
    android:id="@+id/PgsFragFilterBtn"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:background="@drawable/main_button"
    android:textColor="@color/mainTextColor"
    android:layout_margin="3dp"
    android:text="Filter"/>

</LinearLayout>
