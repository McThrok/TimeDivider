<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainBackground"
    android:padding="25dp">

  <EditText
    android:id="@+id/AddTaskNameText"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    android:hint="Name"/>

  <SeekBar
    android:layout_below="@+id/AddTaskNameText"
    android:id="@+id/AddTaskValueSB"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:max="10" />
  
  <TextView
    android:text="Value"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="30dp"
    android:layout_below="@+id/AddTaskValueSB"
    android:layout_alignLeft="@+id/AddTaskValueSB"/>

  <TextView
    android:layout_below="@+id/AddTaskValueSB"
    android:id="@+id/AddTaskValueTV"
    android:layout_marginRight="30dp"
    android:textAlignment="center"
    android:gravity="center"
    android:layout_gravity="center"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignRight="@+id/AddTaskValueSB"/>


  <Button
    android:layout_below="@+id/AddTaskValueTV"
    android:id="@+id/AddTaskDoneButton"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/main_button"
    android:textColor="@color/mainTextColor"
    android:layout_margin="20dp"
    android:text="Done"/>

</RelativeLayout>
